{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],                        // Add standard ES6 lib types
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "esModuleInterop": true                // Set to true to avoid import-related type issues
  }
}
